<h1>
  {{name}} 
    {{
    info-hotspot
    title="Insights"
    body="
    <p>
      After <a href='#/query'>creating a query</a> use this
      page to visualize it and share it with other members
      of the site.
    </p>
    <p>
      For the visulization grammar, read up on using  <a target='_blank' href='https://github.com/trifacta/vega/wiki'>Trifacta's Vega</a>
    </p>
    "
  }}

</h1>

<ul class="insight">
  <li class="editor">
    <div class="data-source">
      {{#linkTo 'query'}}{{query}}{{/linkTo}}
    </div>

    {{ view App.EditorView contentBinding="model.content" }}
    
    <div class="btn-group">
      <a class="btn" {{action save}}><i class="icon-hdd"></i>  Save</a>
      <a class="btn" {{action publish}}><i class="icon-bullhorn"></i> Publish</a>
    </div>

    {{#linkTo 'query' class="btn"}}<i class="icon-th"></i> Data{{/linkTo}}

  </li>
  <li class="chart">
    {{outlet}}
  </li>
</ul>
